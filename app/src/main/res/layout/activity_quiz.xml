<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quiztext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_corner"
        android:minWidth="355dp"
        android:minHeight="80dp"
        android:maxHeight="80dp"

        android:text="Quiztext could not be loaded "
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:maxLines="3"
        android:minLines="2"/>

    <TextView
        android:id="@+id/answer1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toBottomOf="@+id/quiztext"
        android:text="Answer 1 could not be loaded shbahsna bashbahbah"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners_for_buttons"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="350dp"
        android:text="Answer 1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners_for_buttons"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="460dp"
        android:text="Answer 1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners_for_buttons"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/answer4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="580dp"
        android:text="Answer 1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners_for_buttons"
        android:textSize="20dp" />


</RelativeLayout>