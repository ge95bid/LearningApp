<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Buttons for navigation and submission -->
    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:text="WofÃ¼r steht JPEG?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/optionsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <!-- Replace with actual options -->
        <RadioButton
            android:id="@+id/option1_button"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0FE2FD"
            android:buttonTint="#000000"
            android:contentDescription="Option1"

            android:text="Joint Photographic Experts Group"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/option2_button"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"

            android:contentDescription="Option"
            android:text="Java Pixel Encoding Graphics"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/option3_button"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"

            android:contentDescription="Option"
            android:text="Jumbo Picture Extension Graph"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/option4_button"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"
            android:contentDescription="Option"
            android:text="Jovial Photograph Enhancement Group"
            android:textColor="#000000" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionsRadioGroup"
        android:orientation="horizontal">

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Submit" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Next" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="161dp"
        android:layout_marginBottom="-122dp"
        app:srcCompat="@drawable/icon2" />

